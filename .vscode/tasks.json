{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe arquivo de build ativo",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}\\src\\main.cpp",
				"${workspaceFolder}\\glad.o",
				"-o",
				"${workspaceFolder}\\program.exe",
				"-I",
				"${workspaceFolder}\\include\\",
				"-L${workspaceFolder}\\lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:\\MinGW\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe compile glad.c object",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				"-g",
				"-O",
				"-c",
				"${workspaceFolder}\\src\\glad.c",
				"-I",
				"${workspaceFolder}\\include\\",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:\\MinGW\\bin\\g++.exe"
		}
	]
}